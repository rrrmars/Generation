programa
{
	
	funcao inicio()
	{
		inteiro N, S = 0

		para( N = 3; N < 500; N += 3) {
			se ( N % 2 != 0 ) {
				S = S +1
			}

		}
		
		escreva("A soma dos numeros multiplos de 3 e impares eh: ", S)
		
	}
}
